{
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python",
      "config": { "excludeFiles": "{model/*.pkl,venv/**,node_modules/**,frontend/**,.git/**}" }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/build" }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/main.py" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
